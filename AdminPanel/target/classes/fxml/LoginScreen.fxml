<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.Pane?>


<StackPane fx:id="loginStackPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd2.adminPanel.controllers.LoginController">
   <children>
      <AnchorPane>
         <children>
            <BorderPane prefHeight="408.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <top>
                  <StackPane prefHeight="45.0" prefWidth="600.0" style="-fx-background-color: black;" BorderPane.alignment="CENTER">
                     <children>
                        <Label text="Logowanie" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </StackPane>
               </top>
               <bottom>
                  <HBox alignment="CENTER" prefHeight="45.0" prefWidth="600.0" spacing="10.0" style="-fx-background-color: black;" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="buttonLogin" mnemonicParsing="false" onAction="#login" style="-fx-background-color: #79FF4D;" text="Login" />
                        <Button fx:id="buttonExit" mnemonicParsing="false" onAction="#exit" style="-fx-background-color: #79FF4D;" text="Wyjście" />
                     </children>
                  </HBox>
               </bottom>
               <center>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label text="Login:" />
                        <TextField fx:id="textFieldLogin" maxWidth="150.0" />
                        <Label text="Hasło:" />
                        <PasswordField fx:id="passwordField" maxWidth="150.0" />
                        <StackPane maxHeight="0.0" prefHeight="0.0" prefWidth="200.0">
                           <children>
                              <Label fx:id="labelWrongPassword" text="Błędne hasło." textFill="RED" visible="false" />
                              <Label fx:id="labelWrongLogin" text="Użytkownik nie istnieje." textFill="RED" visible="false" />
                           </children>
                        </StackPane>
                     </children>
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </BorderPane.margin>
                  </VBox>
               </center>
            </BorderPane>
         </children>
      </AnchorPane>
   </children>
</StackPane>
